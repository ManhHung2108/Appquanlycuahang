<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập Nhập Nội Dung"
        android:textColor="@color/purple_700"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edt_sua_ten"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sản phẩm"
        android:textColorHint="@color/purple_200"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edt_sua_ncc"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhà cung cấp"
        android:textColorHint="@color/purple_200"
        android:textSize="20sp"/>

    <EditText
        android:textColor="@color/black"
        android:id="@+id/edt_sua_thongtin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thông tin"
        android:textColorHint="@color/purple_200"
        android:textSize="20sp"/>

    <EditText
        android:textColor="@color/black"
        android:id="@+id/edt_sua_soluong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số lượng"
        android:textColorHint="@color/purple_200"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_margin="5dp"
            android:id="@+id/btn_Sua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhập"
            android:layout_weight="1"/>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/btn_Huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>